<launch>

  <!-- TF -->
  <include file="$(env HOME)/.autoware/simulation_data/tf_w_m.launch"/>

  <!-- Point Cloud -->
  <include file="$(find map_file)/launch/points_map_loader.launch">
      <arg name="path_pcd" 
           value=
           '$(env HOME)/.autoware/simulation_data/SimEnv.pcd'/>
  </include>

  <!-- Vector Map -->
  <node pkg="map_file" type="vector_map_loader" name="vector_map_loader" 
    args="
        $(env HOME)/.autoware/simulation_data/SimVectorMap/custom_area.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/dtlane.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/area.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/lane.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/line.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/node.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/point.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/roadedge.csv
        $(env HOME)/.autoware/simulation_data/SimVectorMap/wayarea.csv"/>
  
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(env HOME)/.autoware/sjtu_data/sjtu.rviz" />
  <!-- <node pkg="rqt_tf_tree" type="rqt_tf_tree" name="rqt_tf_tree" /> -->

  <include file="$(find runtime_manager)/launch_files/velodyne_vlp16.launch"/>

</launch>
